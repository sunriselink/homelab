[Unit]
Description=Send notifications about power events
Requires=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/etc/default/power-events.env
ExecStart=-/usr/local/bin/power-events.sh up
ExecStop=-/usr/local/bin/power-events.sh down

[Install]
WantedBy=multi-user.target
